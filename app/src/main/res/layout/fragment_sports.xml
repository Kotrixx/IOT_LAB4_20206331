<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ForecastFragment$SportsFragment">

    <!-- AppBar for Future Forecast -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:elevation="4dp">
        <TextView
            android:id="@+id/future_forecast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronóstico Futuro"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Search Fields for Future Forecast -->
    <TextInputLayout
        android:id="@+id/future_forecast_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextInputEditText
            android:id="@+id/future_forecast_location_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="idLocación"
            android:inputType="text"/>
    </TextInputLayout>

    <TextInputLayout
        android:id="@+id/future_forecast_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/future_forecast_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextInputEditText
            android:id="@+id/future_forecast_day_interes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Día de Interés"
            android:inputType="date"/>
    </TextInputLayout>

    <Button
        android:id="@+id/search_future_forecast_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/future_forecast_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#0288D1"
        android:textColor="@android:color/white"/>

    <!-- RecyclerView to display future forecast results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFutureForecast"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_future_forecast_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
